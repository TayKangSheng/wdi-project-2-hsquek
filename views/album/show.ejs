<h1> <%= foundAlbum.name %> </h1>

<p><%= foundAlbum.description %></p>

<div style="display: flex">
<a href="/albums/<%=foundAlbum.id%>/update" class="btn btn-primary">Edit</a>
<form method="POST" action="/albums/<%= foundAlbum.id%>?_method=DELETE">
    <button class="btn btn-danger" type="submit">
      Delete
    </button>
  </form>
</div>

<div style="width: 640px; height: 480px; margin: 20px auto;">

  <img src="<%=foundAlbum.photos[0].url%>" style="width: 640px; height: 480px; margin: 0 auto" data-num="0">
  <div class="photo-nav" style="display:flex; width: 100px; height: 30px">
  <button class="btn btn-primary" name="prev">Prev</button><button class="btn btn-primary" name="next">Next</button>
  </div>
</div>



<section id="section-works" class="section appear clearfix">
			<div class="container">
				<div class="row">

					<div class="col-md-12">
						<div class="row">
							<div class="portfolio-items isotopeWrapper clearfix isotope" id="3" style="position: relative; overflow: hidden; height: 861px;">


                <% for (var i = 0; i < foundAlbum.photos.length; i++) { %>
                  <article class="col-md-4 isotopeItem webdesign isotope-item bx-pager-item bx-pager-link active" style="position: absolute; left: 0px; top: 0px; transform: translate3d(<%= (i%3 * 390) %>px, <%= Math.floor(i/3)*287 %>px, 0px) scale3d(1, 1, 1); opacity: 1;">
  									<div class="portfolio-item">
  										<div class="wow rotateInUpLeft animated" data-animation-delay="4.8s" style="visibility: visible; position: absolute;">
  											<img src="<%= foundAlbum.photos[i].url %>" alt="welcome" style="width: 350px; height: 262.5px; position: relative; top:50%; transform:translateY(30%)">
  										</div>

  									</div>
  								</article>
                <% } %>



							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
