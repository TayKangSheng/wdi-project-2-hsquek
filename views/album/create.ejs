

<form method="post" action="/albums" enctype="multipart/form-data">
  <h2>Add an album</h2>

  <div class="row">
    <div class="form-group col-md-6">
      <input type="text" class="form-control" name="albums[name]" id="name" placeholder="Album title">
    </div>
    <div class="form-group col-md-6">
      <input type="date" class="form-control" name="albums[date]" id="date">
    </div>
    <div class="form-group col-md-12">
      <textarea type="text" class="form-control" name="albums[description]" id="description">Describe your album</textarea>
    </div>
    <div class="form-group col-md-4">
      <input type="file" class="form-control" name="albums[photos]" id="photos" multiple>
    </div>
    <div class="form-group col-md-4">
      <button type="submit" class="btn btn-default">Create</button>
    </div>
  </div>
</form>
