<div class="jumbotron" style="margin:50px 0 0 0">

  <% if (!isAuthenticated) { %>
    <h1>Welcome</h1>
    <div style="height:100px">
    </div>
    <a class="btn btn-primary btn-lg" href="/login" role="button">Log In</a> <span style="font-size: 16px"> or </span>
    <a class="btn btn-primary btn-lg" href="/signup" role="button">Register</a>
  <% } else { %>
    <h1>Welcome back <%= user.local.name %> </h1>
    <div style="height:100px">
    </div>
  <% } %>



</div>

