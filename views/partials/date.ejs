
<% function getDate() { %>

  <%var year = thing.date.getFullYear()%>
  <%var month = thing.date.getMonth() + 1%>
  <%var day = thing.date.getDate()%>

  <%year = year.toString()%>
  <%month = month.toString()%>
  <%day = day.toString()%>

  <%if (month.length < 2) {%>
    <%  month = "0" + month%>
    <%}<%

    <%if (day.length < 2) {%>
      day = "0" + day%>
      <%}%>

      <%var date = year + "-" + month + "-" + day%>
      <% return date %>
<% } %>
