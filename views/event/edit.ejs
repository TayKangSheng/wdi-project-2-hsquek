<form method="post" action= "/events/<%=foundEvent._id%>?_method=PUT" >
  <h2>Update event</h2>

  <div class="row">
    <div class="form-group col-md-12">
      <input type="text" class="form-control" name="events[name]" id="name" placeholder="Event title" value="<%= foundEvent.name %>">
    </div>
    <div class="form-group col-md-4">
      <input type="text" class="form-control" name="events[status]" id="status" placeholder="Event status" value="<%= foundEvent.status %>">
    </div>
    <div class="form-group col-md-4">
      <input type="date" class="form-control" name="events[date]" id="date" value="<%= foundEvent.date.getFullYear() + "-" + (foundEvent.date.getMonth() + 1) + "-" + foundEvent.date.getDate() %>">
    </div>
    <div class="form-group col-md-4">
      <input type="number" class="form-control" name="events[attendees]" id="attendees" placeholder="Number of attendees" value="<%= foundEvent.attendees %>">
    </div>
    <div class="form-group col-md-12">
      <input type="text" class="form-control" name="events[venue]" id="venue" placeholder="Event venue" value="<%= foundEvent.venue %>">
    </div>
    <div class="form-group col-md-12">
      <input type="text" class="form-control" name="events[description]" id="description" placeholder="Describe your event" value="<%= foundEvent.description %>">
    </div>
    <div class="form-group col-md-4">
      <input type="url" class="form-control" name="events[attachments]" id="attachments" placeholder="Link to your attachment" value="<% foundEvent.attachments %>">
    </div>
    <div class="form-group col-md-4">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
