<h2>Create your family</h2>

<form action="/family/create" method="post">

  <div class="row">
    <div class="form-group col-md-4">
        <input type="text" class="form-control" name="name" placeholder="name for your family here">
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>


</form>
